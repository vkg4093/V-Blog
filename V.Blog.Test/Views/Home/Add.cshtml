@model V.Blog.Core.ViewModel.CustomerViewModel
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    @Html.Partial("~/Views/Home/_LeftPageMenu.cshtml")
    <div class="row">
        <div class="col-md-6">
            <div class="content-box-large">
                <div class="panel-body">
                    @if (Model != null)
                    {
                        if ((Model.result == "true"))
                        {
                        <div id="divMessage" class="alert alert-success" role="alert">
                            <p>
                                The records saved successfully.<a id="triggered-cta-box-close" onclick="hideMessage();"
                                    href="javascript:void(0)">x</a>
                            </p>
                        </div>
                        }

                    }
                    @using (Ajax.BeginForm("Add", "Home", new AjaxOptions
                    {

                        HttpMethod = "Post",
                        OnBegin = "BeforestartLoading",
                        OnSuccess = "callSuccessFunction"

                    }, new { @class = "form-horizontal" }))
                    {
                        <div class="form-group">
                            @Html.LabelFor(m => m.CustomerID, new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.CustomerID)
                            </div>
                            <div class="col-sm-10" style="color: Red;">
                                @Html.ValidationMessageFor(m => m.CustomerID)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.CompanyName, new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.CompanyName)
                            </div>
                            <div class="col-sm-10" style="color: Red;">
                                @Html.ValidationMessageFor(m => m.CompanyName)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.ContactName, new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.ContactName)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.ContactTitle, new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.ContactTitle)
                            </div>
                        </div>                         
                        <div class="form-group">
                            @Html.LabelFor(m => m.Address, new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.Address)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.City, new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-10">
                                @*   @Html.TextBoxFor(m => m.City)*@
                                @Html.DropDownListFor(m => m.City, Model.stateList, "", new { id = "ms" })
                            </div>
                        </div>  
                        <div class="form-group">
                            @Html.LabelFor(m => m.Region, new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.Region)
                            </div>
                        </div> 
                        <div class="form-group">
                            @Html.LabelFor(m => m.PostalCode, new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.PostalCode)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Country, new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.Country)
                            </div>
                        </div>  
                        <div class="form-group">
                            @Html.LabelFor(m => m.Phone, new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.Phone)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Fax, new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.Fax)
                            </div>
                        </div> 
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" class="btn btn-primary">
                                    Save</button>
                                <button id="btnReset" type="reset" onclick="$(this).resetValidation()" class="btn btn-default">
                                    Reset</button>
                            </div>
                            <div style="padding-top: 10px; text-align: center; width: 100%; display: none;" id="Waitingloader">
                                <img src="@Url.Content("~/Images/ajax-loader-trans.gif")" alt=""  />
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    function BeforestartLoading() {
        $("#Waitingloader").show();
    }
    function callSuccessFunction() {
        $("#Waitingloader").hide();
        alert("save successfully");
    }
</script>
